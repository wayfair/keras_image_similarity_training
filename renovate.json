{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for keras image similarity training repository",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "schedule": [
    "before 3am every weekday"
  ],
  "enabledManagers": [
    "github-actions",
    "dockerfile"
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Docker"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "matchPackageNames": ["tensorflow"],
      "groupName": "Tensorflow"
    },
    {
      "matchFiles":["training_siamese_network.ipynb"],
      "matchManagers": ["pip-requirements"],
      "groupName": "Python for Jupyter Notebook"
    }
  ]
}
